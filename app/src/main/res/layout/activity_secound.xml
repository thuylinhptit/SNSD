<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="25dp"
        android:scaleType="centerCrop">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/hinhanh2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="5dp"
                android:background="@drawable/item_1"
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_height="400dp" />
            <TextView
                android:id="@+id/text"
                app:layout_constraintBottom_toBottomOf="@id/hinhanh2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:text="hovaten"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#2844E4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/ten"
        app:layout_constraintTop_toBottomOf="@+id/cardview"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:text="Ho va Ten"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="#D64CA8"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/ten1"
        app:layout_constraintTop_toBottomOf="@+id/ten"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Name: "
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="#0B0B0B"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/sn"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/ten1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:fontFamily="monospace"
        android:textColor="#D64CA8"
        android:textSize="25dp"
        android:text="Sinh nhat"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/birth1"
        app:layout_constraintTop_toBottomOf="@+id/sn"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:text="Birth: "
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="#0B0B0B"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>